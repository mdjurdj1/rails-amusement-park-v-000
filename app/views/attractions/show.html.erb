<strong>Name:</strong> <%= @attraction.name %> <br />
<strong>Ticket Requirement:</strong> <%= @attraction.tickets %> <br />
<strong>Height Requirement:</strong> <%= @attraction.min_height %> <br />
<strong>Nausea Rating:</strong> <%= @attraction.nausea_rating %> <br />
<strong>Happiness Rating:</strong> <%= @attraction.happiness_rating %> <br />

  <form action="/rides/new" method="post">
      <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
      <%= tag(:input, :type => "hidden", :name => :attraction_id, :value => @attraction.id) %>
      <%= tag(:input, :type => "hidden", :name => :user_id, :value => current_user.id) %>
      <input type="submit" value="Go on this ride" />
    </form>

<% if current_user.admin %> 
<%= link_to "Edit Attraction", attraction_path(@attraction) %> <br />
<% else %>
<%= link_to "Back", attractions_path %> <br />
<% end %>